<html lang="en">
<head>
  <%- include('../partials/head', { title: 'My Courses' }) %>
</head>
<body>
  <%- include('../partials/navbar', { user }) %>
  <main class="container">
    <%- include('../partials/header') %>
    <h2>Student: <%= user.username %></h2>

    <table>
      <thead>
        <tr>
          <th>Course Name</th>
          <th>Exam Period</th>
          <th>Grading Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
